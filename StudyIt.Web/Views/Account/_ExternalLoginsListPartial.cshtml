@model ICollection<AuthenticationClientData>

@if (Model.Count == 0)
{
    <div class="message-info">
        <p>
            There are no external authentication services configured. See <a href="http://go.microsoft.com/fwlink/?LinkId=252166">this article</a>
            for details on setting up this ASP.NET application to support logging in via external services.
        </p>
    </div>
}
else
{
    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
    @Html.AntiForgeryToken()
    <fieldset id="socialLoginList">
        <p>
            @foreach (AuthenticationClientData p in Model)
            {
                <input style="border:0;padding:0;background:none;width:70px;height:70px;" type="image" name="provider" value="@p.AuthenticationClient.ProviderName" title="Използвай своя @p.DisplayName акаунт"
                     src="@if (p.DisplayName.ToString() == "Facebook")
                          {
                            @:/Content/externalLogin/Facebook-Icon.png
                          }
                          else if (p.DisplayName.ToString() == "Google")
                          {
                              @:/Content/externalLogin/social_google_box.png
                          }"
                />
            }
        </p>
    </fieldset>
    }
}
